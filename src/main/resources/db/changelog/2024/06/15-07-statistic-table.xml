<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="23-19-add-statistic-table" author="alimova">
        <createTable tableName="statistic_quest">
            <column name="id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="statistic_quest_pkey"/>
            </column>
            <column name="session_id" type="UUID"/>
            <column name="user_name" type="VARCHAR(255)"/>
            <column name="quest_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="23-21-add-foreign-key-statistic-table" author="alimova">
        <addForeignKeyConstraint baseTableName="statistic_quest"
                                 baseColumnNames="quest_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableName="quest"
                                 referencedColumnNames="id"
                                 constraintName="quest_statistic_fkey"/>
    </changeSet>

</databaseChangeLog>