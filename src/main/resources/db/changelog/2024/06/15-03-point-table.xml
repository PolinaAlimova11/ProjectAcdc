<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="22-47-add-point-table" author="alimova">
        <createTable tableName="point">
            <column name="id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="point_pkey"/>
            </column>
            <column name="question" type="text"/>
            <column name="quest_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet id="22-52-add-foreign-key-action-table" author="alimova">
        <addForeignKeyConstraint baseTableName="action"
                                 baseColumnNames="point_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableName="point"
                                 referencedColumnNames="id"
                                 constraintName="point_fkey"/>
    </changeSet>

</databaseChangeLog>