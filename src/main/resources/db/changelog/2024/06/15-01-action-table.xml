<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="22-26-add-table-action" author="alimova">
        <createTable tableName="action">
            <column name="id" type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="action_pkey"/>
            </column>
            <column name="status_point" type="VARCHAR(50)"/>
            <column name="point_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    
    <changeSet id="22-30-add-foreign-key-step-table" author="alimova">
        <addForeignKeyConstraint baseTableName="step_action"
                                 baseColumnNames="action_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedTableName="action"
                                 referencedColumnNames="id"
                                 constraintName="action_fkey"/>
    </changeSet>

</databaseChangeLog>